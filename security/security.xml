<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="group_clasmanager" model="res.groups">
        <field name="name">Clasificaciones / Manager</field>
    </record>


    <record id="only_responsible_can_modify_clasificaciones" model="ir.rule">
      <field name="name">Only Responsible can modify Clasificaciones</field>
      <field name="model_id" ref="model_clasificacion_clasificaciones"/>
      <field name="groups" eval="[(4, ref('clasificacion.group_clasmanager'))]"/>
      <field name="perm_read" eval="0"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="1"/>
      <field name="domain_force">
        ['|', ('clasificaciones_id','=',False), ('clasificaciones_id','=',user.id)]
    </field>
  </record>

</odoo>
